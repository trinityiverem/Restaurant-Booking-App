<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CuisinesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- android:background="@drawable/home_btn_test"
        android:drawableTop="@drawable/home_icon_test" -->

    <ImageButton
        android:id="@+id/african"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|left"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:text="African"
        android:textColor="#FFFFFF"
        android:background="@drawable/african_food"/>

    <ImageButton
        android:id="@+id/asian"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="top|right"
        android:drawablePadding="-15sp"
        android:text="Asian"
        android:textColor="#FFFFFF"
        android:layout_marginRight="18dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/asian_food"/>
    <ImageButton
        android:id="@+id/caribbean"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center|left"
        android:text="Caribbean"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="18dp"
        android:background="@drawable/caribbean_food"/>

    <ImageButton
        android:id="@+id/english"
        android:background="@drawable/english_food"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center|right"
        android:text="English"
        android:textColor="#FFFFFF"
        android:layout_marginRight="18dp"
      />


    <ImageButton
        android:id="@+id/italian"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom|left"
        android:text="Italian"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/italian_food"/>

    <ImageButton
        android:id="@+id/mexican"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom|right"
        android:text="Mexican"
        android:textColor="#FFFFFF"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/mexican_food"/>



</FrameLayout>